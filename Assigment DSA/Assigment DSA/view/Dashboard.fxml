<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.DashboardController">
    <HBox>
        <Label fx:id="totalIncomeLabel" text="Total Income: $0.00" />
        <Label fx:id="totalExpenseLabel" text="Total Expense: $0.00" />
        <Label fx:id="balanceLabel" text="Balance: $0.00" />
    </HBox>
    <Button text="Add Transaction" onAction="#handleAddTransaction"/>
    <Button text="View Report" onAction="#handleViewReport"/>
</VBox>
